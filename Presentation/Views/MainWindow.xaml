<Window x:Class="ConcurrentProgramming.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:concurrentprogramming="clr-namespace:ConcurrentProgramming"
        Title="Bouncing Balls" Height="450" Width="800">

    <Grid>
        <Button Content="Move Ball" Command="{Binding MoveBallCommand}" HorizontalAlignment="Left" VerticalAlignment="Top" Width="100" Margin="19,22,0,0"/>
        <Canvas Margin="10,0,-10,0">
            <Ellipse Width="50" Height="50" Fill="Red" Canvas.Left="375" Canvas.Top="192"/>
        </Canvas>
    </Grid>
</Window>
